<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">

    <!-- Define your CORS filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.iam.CorsFilter</filter-class>
    </filter>

    <!-- Map the filter to URL patterns -->
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>        <!-- This allows the filter to intercept all requests -->
    </filter-mapping>



    <!-- Other configurations, servlets, etc. -->

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.iam.CorsFilter</filter-class>
        <init-param>
            <param-name>allowedOrigins</param-name>
            <param-value>http://localhost:3000 </param-value>
        </init-param>
    </filter>

    <!-- ... -->

</web-app>
